{
	"compilerOptions": {
		"outDir": "./dist/",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vitest/globals", "vite/client", "node"],
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es6",
		"jsx": "react-jsx",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src", "tests", "src/types/vite-env.d.ts"]
}
